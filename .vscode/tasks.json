{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C: build libraries",
            "type": "shell",
            "command": "sh",
            "args": [
                "-c",
                "clang -std=c17 -fPIC -shared $(find ${fileDirname} -name \"*.c\" ! -name \"${fileBasename}\" -print0 | xargs -0) -o ${fileDirname}/lib${fileBasenameNoExtension}libraries.so -I ${fileDirname}/libs -I /opt/homebrew/opt/openssl@3/include -L /opt/homebrew/opt/openssl@3/lib -lssl -lcrypto"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Build shared library from all .c files except the one being executed"
        },
        {
            "label": "C: build main app",
            "type": "cppbuild",
            "command": "clang",
            "args": [
                "-std=c17",
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/${fileBasename}",
                "-o", "${fileDirname}/${fileBasenameNoExtension}",
                "-L${fileDirname}",
                "-l${fileBasenameNoExtension}libraries",
                "-I", "${fileDirname}/libs",
                "-I", "/opt/homebrew/opt/openssl@3/include",
                "-L", "/opt/homebrew/opt/openssl@3/lib",
                "-lssl",
                "-lcrypto"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build"
            },
            "dependsOn": "C: build libraries",
            "detail": "Build main.c and link with libc libraries"
        },
        {
            "label": "C++: build libraries",
            "type": "shell",
            "command": "sh",
            "args": [
                "-c",
                "clang++ -std=c++20 -stdlib=libc++ -fPIC -shared $(find ${fileDirname} -name \"*.cpp\" ! -name \"${fileBasename}\" -print0 | xargs -0) -o ${fileDirname}/lib${fileBasenameNoExtension}libraries.so -I ${fileDirname}/libs -I /opt/homebrew/opt/openssl@3/include -L /opt/homebrew/opt/openssl@3/lib -lssl -lcrypto"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Build shared library from all cpp files except the one being executed"
        },
        {
            "label": "C++: build main app",
            "type": "cppbuild",
            "command": "clang++",
            "args": [
                "-std=c++20",
                "-stdlib=libc++",
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/${fileBasename}",
                "-o", "${fileDirname}/${fileBasenameNoExtension}",
                "-L${fileDirname}",
                "-l${fileBasenameNoExtension}libraries",
                "-I", "${fileDirname}/libs",
                "-I", "/opt/homebrew/opt/openssl@3/include",
                "-L", "/opt/homebrew/opt/openssl@3/lib",
                "-lssl",
                "-lcrypto"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "C++: build libraries",
            "detail": "Build main.cpp and link with libc++ libraries"
        }
    ]
}
