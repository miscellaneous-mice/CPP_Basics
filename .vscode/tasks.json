{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: build libraries",
            "command": "clang++",
            "args": [
                "-std=c++20",
                "-stdlib=libc++",
                "-fPIC",
                "-shared",
                "${fileDirname}/libs/*.cpp",
                "-o",
                "${fileDirname}/lib${fileBasenameNoExtension}libraries.so",
                "-I", "/opt/homebrew/opt/openssl@3/include",
                "-L", "/opt/homebrew/opt/openssl@3/lib",
                "-lssl",
                "-lcrypto"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Build shared library from libs/"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: build main app",
            "command": "clang++",
            "args": [
                "-std=c++20",
                "-stdlib=libc++",
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/${fileBasename}",
                "-o", "${fileDirname}/${fileBasenameNoExtension}",
                "-L${fileDirname}",
                "-l${fileBasenameNoExtension}libraries",
                "-I", "${fileDirname}/libs",   
                "-I", "/opt/homebrew/opt/openssl@3/include",
                "-L", "/opt/homebrew/opt/openssl@3/lib",
                "-lssl",
                "-lcrypto"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "C/C++: build libraries",
            "detail": "Build main.cpp and link with libmylibraries.so"
        }
    ]
}
